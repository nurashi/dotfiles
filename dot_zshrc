#ZSH_THEME="spaceship"

zstyle ':omz:update' mode reminder 
zstyle ':omz:update' frequency 7

COMPLETION_WAITING_DOTS="true"

plugins=(
  # must-have
  zsh-autosuggestions
  zsh-syntax-highlighting
  
  # theme and prompt
  starship

  # completions
  aws
  gitfast
  dotnet
  nvm
  eza
  aliases
  gitignore
)

source $ZSH/oh-my-zsh.sh

alias zshconfig="nvim ~/.zshrc"
alias ohmyzsh="nvim ~/.oh-my-zsh"

function start () {
    xdg-open "$*" > /dev/null 2>&1 &
}

# eza
alias ls='exa'                                                          # ls
alias l='exa -lbF --git'                                                # list, size, type, git
alias la='exa -lbaF --git'                                              # list, size, type, git
alias ll='exa -lbGF --git'                                              # long list
alias llm='exa -lbGd --git --sort=modified'                             # long list, modified date sort
alias lA='exa -lbhHigUmuSa --time-style=long-iso --git --color-scale'   # all list
alias lx='exa -lbhHigUmuSa@ --time-style=long-iso --git --color-scale'  # all + extended list
alias lS='exa -1'                                                       # one column, just names
alias lt='exa --tree --level=2'                                         # tree

# custom
alias cls='clear'
alias vim='nvim'
alias vi='nvim'
alias zed='zeditor'
alias reload_waybar='pkill waybar || 1; hyprctl dispatch exec waybar'
alias battery='upower -i /org/freedesktop/UPower/devices/battery_BAT0| grep --color=never -E "state|to full|percentage"'

eval "$(atuin init zsh --disable-up-arrow)"

